@model IEnumerable<PruebaTecnica.Models.Proyecto>

@{
    ViewData["Title"] = "Proyectos";
}

<h1>Proyectos</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Agregar proyecto</a>
</p>

@{
    var errorMessage = TempData["ErrorMessage"] as string;
}


@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}
<form asp-action="Index" method="get">
    <div class="form-row d-flex justify-content-left">
        <div class="col-auto">
            <input type="text" name="searchTerm" class="form-control" placeholder="Buscar Proyectos">
        </div>
        <div class="col-auto" style="margin-left: 10px;">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>
    


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Constructora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacto)
            </th>
            <th>
                Personas Interesadas
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Constructora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contacto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonasInteresada.Count)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Eliminar</a> |
                <a asp-action="AgregarPersonaInteresada" class="btn btn-success" asp-route-proyectoId="@item.Id">Agregar Persona Interesada</a>
            </td>
        </tr>
}
    </tbody>
</table>
